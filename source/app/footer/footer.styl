
.Footer {
		background-color: #2A2A2A;
		color:#ffffff;
		text-align: center;
		text-decoration: none;
		font-family: 'Roboto Condensed', sans-serif;
		font-weight: 400;

}

.Footer-List {
		display: inline-block;
		padding: 0;
		text-align: center;
		width:25em;
		height: auto;
		vertical-align: top;
		margin-top:1.5em;
		margin-bottom: 0;

}
.Footer-item {
		display: block;
	 	margin-top: .1em;
	 	margin-right: 13px;

}
.Footer-item-Bold {
		font-weight: bold;
		margin-bottom:1.5em;
}


.Footer-link {
    padding: .5em;
    margin-top: 0;
		margin-right: 150em;
}
.footer-icon-contactos{
		display: inline-block;
		margin-top:.5em;
		margin-bottom: 14px;
		font-size:2em;

}
.footer-email{

		color:#D50000;
}
.Footer-descripcion{

		color:#ffffff;
		width:102%;

}
.div-footer-copyringht{
		display: inline-block;
		border-top:2px solid #ffffff;
		text-align: center;
		width:80%;
		font-family: 'Roboto Condensed', sans-serif;
		font-weight: 400;

}
.footer-copyringht{
		padding:1.5em;

}


@media (max-width: 1084px){
		.Footer-List{
					width:15%;
	}
	.Footer-descripcion{
					display:none;
	}
	.aboud{
		display:none;
	}
	.visita{
	width: 20%;
text-align: left;

	}
	.contactos{
	width: 50%;
	float: right;
	position: relative;
  text-align: left;


	}
	.Footer-item{
	padding: 2px;

	}
	.Footer-item:hover{
		color:#1A237E;
		padding: 4px;
	}
	.icon-contacto{
	border-radius:0%;
	}
	}
